<% if @friend.errors.any? %>
    <h3>Resolve the following errors to save</h3>
    <ul>
        <% @friend.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @friend, local: true) do |f| %>
    <p>
        <%= f.label :fname %></br>
        <%= f.text_field :fname %>
    </p>

    <p>
        <%=  f.label :lname %></br>
        <%= f.text_field :lname %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>